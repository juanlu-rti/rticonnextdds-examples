<?xml version="1.0" encoding="UTF-8"?>

<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="https://community.rti.com/schema/6.0.0/rti_recording_service.xsd">
   
    <!-- The name of the library, and the function used to create an instance
         of the StorageWriter -->     
    <plugin_library name="StorageLibrary">
        <storage_plugin name="KyotoCabinet">
            <dll>KyotoCabinetWriter</dll>
            <create_function>KyotoCabinetWriter_get_storage_writer</create_function>
        </storage_plugin>
    </plugin_library>
    
    <!--  A definition of a Recording Service instance to run that
          loads a library written in C  -->
    <recording_service name="KyotoCabinetEval">
        <!-- Storage properties. These are passed to the plugin in the 
             plugin_library -->
        <storage>
            <plugin plugin_name="StorageLibrary::KyotoCabinet">
                <property>
                    <value>
                        <element>
                            <name>example.kyoto_cabinet.data_filename_prefix</name>
                            <value>KCEval</value>
                        </element>
                        <element>
                            <name>example.kyoto_cabinet.pub_filename</name>
                            <value>dcpspublication.dat</value>
                        </element>
                    </value>
                </property>
            </plugin>
        </storage>
        <!-- Domain Participant, by default in domain 0. Use the 
             -domainIdBase command-line parameter to adjust -->
        <domain_participant name="Domain0">
            <domain_id>0</domain_id>
        </domain_participant>

        <session name="Session">
            <topic_group name="AllExceptRti" participant_ref="Domain0">
                <allow_topic_name_filter>*</allow_topic_name_filter>
                <deny_topic_name_filter>rti/*</deny_topic_name_filter>
            </topic_group>
        </session>
    </recording_service>
</dds>
